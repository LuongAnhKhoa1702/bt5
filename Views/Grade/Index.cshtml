@model List<Grade>

@{
    ViewData["Title"] = "Danh sách lớp học";
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-chalkboard-teacher me-2"></i>Danh sách Lớp học</h5>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="fas fa-plus me-1"></i>Thêm lớp học
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Ảnh</th>
                        <th>Mã lớp</th>
                        <th>Tên lớp</th>
                        <th class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img src="@item.ImagePath" alt="Ảnh lớp" style="width: 100px; height: 80px; object-fit: cover;" />
                            </td>
                            <td>@item.GradeId</td>
                            <td>@item.GradeName</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.GradeId" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>
                                <a asp-action="Details" asp-route-id="@item.GradeId" class="btn btn-sm btn-outline-info me-1">
                                    <i class="fas fa-info-circle"></i> Chi tiết
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.GradeId" class="btn btn-sm btn-outline-danger">
                                    <i class="fas fa-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
